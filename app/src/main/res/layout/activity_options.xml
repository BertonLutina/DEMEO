<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerO"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context="app.stucre.Courses">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="app.stucre.options">
    >




        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            app:title="Options"
            android:gravity="center_horizontal"
            app:titleTextColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:textAlignment="center"
            android:id="@+id/toolbarOptions"
            ></android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d26428">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intership" />


            </android.support.design.widget.TabLayout>

        </android.support.design.widget.AppBarLayout>



        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout"
            android:imeOptions="normal"
            android:inputType="text"
            android:queryHint="heee"
            android:id="@+id/searchOptions"
            />

        <ListView
            android:id="@+id/list_options"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_alignParentStart="true"
            android:layout_above="@id/countCreditOptions"
            android:layout_below="@+id/searchOptions"
            />

        <TextView
            android:id="@+id/countCreditOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:autoSizeMaxTextSize="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimaryDark"
            android:padding="13dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#d26428"
            android:textSize="30dp" />

        <com.todddavies.components.progressbar.ProgressWheel
            android:id="@+id/progressBarOptions"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/list_options"
            android:layout_marginEnd="6dp"
            android:max="60"
            android:padding="1dp"
            android:progress="65"
            android:progressDrawable="@drawable/custom_progressbar_circular"
            android:layout_marginTop="6dp"
            ProgressWheel:pwTextSize="14sp"
            ProgressWheel:pwRimColor="@color/BlauwDark"
            ProgressWheel:pwBarLength="60dp"
            ProgressWheel:pwBarColor="@color/Orange"
            ProgressWheel:pwBarWidth="10dp"
            ProgressWheel:pwRimWidth="10dp"
            />

        <RadioGroup
            android:checkedButton="@id/see"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/progressBarOptions"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:background="@drawable/control_switch_background_border"
            android:id="@+id/radioGroupOptions">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/control_switch_background_selector"
                android:button="@null"
                android:text="UnSelect"
                android:textSize="15dp"
                android:textColor="@color/Orange"
                android:id="@+id/see"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/control_switch_background_selector"
                android:button="@null"
                android:text="Select"
                android:textSize="15dp"
                android:textColor="@color/Orange"
                android:id="@+id/select"/>

        </RadioGroup>




    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/nav_o_bar"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_nav">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>

