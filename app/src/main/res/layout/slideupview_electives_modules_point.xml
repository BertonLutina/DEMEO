<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutSlideUpEM">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/EM_progress_bar_points">

        <com.todddavies.components.progressbar.ProgressWheel
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            ProgressWheel:pwTextColor="#222"
            ProgressWheel:pwTextSize="14sp"
            ProgressWheel:pwRimColor="@color/Orange"
            ProgressWheel:pwBarLength="60dp"
            ProgressWheel:pwBarColor="#0097D6"
            ProgressWheel:pwBarWidth="5dp"
            ProgressWheel:pwRimWidth="10dp"
            android:layout_margin="4dp"
            android:id="@+id/count_progressBar_EM_optionA"
            />

        <com.todddavies.components.progressbar.ProgressWheel
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            ProgressWheel:pwTextColor="#222"
            ProgressWheel:pwTextSize="14sp"
            ProgressWheel:pwRimColor="@color/Orange"
            ProgressWheel:pwBarLength="60dp"
            ProgressWheel:pwBarColor="#0097D6"
            ProgressWheel:pwBarWidth="5dp"
            ProgressWheel:pwRimWidth="10dp"
            android:id="@+id/count_progressBar_EM_optionB"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/duties_points">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:id="@+id/count_text_EM_optionA"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/count_text_EM_optionB"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_below="@id/EM_progress_bar_points">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Option A"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:id="@+id/text_EM_optionA"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Option B"
            android:textSize="16sp"
            android:textAlignment="center"
            android:id="@+id/text_EM_optionB"/>

    </LinearLayout>

    <Button
        android:id="@+id/versturen_EM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/verwijderen_EM"
        android:layout_marginEnd="80dp"
        android:text="Send" />

    <Button
        android:id="@+id/verwijderen_EM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="103dp"
        android:layout_marginStart="81dp"
        android:clickable="false"
        android:text="Erase" />

</RelativeLayout>