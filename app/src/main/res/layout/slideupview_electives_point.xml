<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:id="@+id/slideUpElectivesView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/electives_progress_bar_points">

        <com.todddavies.components.progressbar.ProgressWheel
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            ProgressWheel:pwTextColor="#222"
            ProgressWheel:pwTextSize="18sp"
            ProgressWheel:pwRimColor="#fff"
            ProgressWheel:pwBarLength="60dp"
            ProgressWheel:pwBarColor="@color/Orange"
            ProgressWheel:pwBarWidth="5dp"
            ProgressWheel:pwRimWidth="10dp"
            android:layout_margin="4dp"
            android:id="@+id/count_progressBar_electives_fase3"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_below="@id/electives_progress_bar_points">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Fase 3"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:id="@+id/text_electives_fase3"/>


    </LinearLayout>

    <Button
        android:id="@+id/versturen_electives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/verwijderen_electives"
        android:layout_marginEnd="80dp"
        android:text="Send" />

    <Button
        android:id="@+id/verwijderen_electives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="103dp"
        android:layout_marginStart="81dp"
        android:clickable="false"
        android:text="Erase" />

    <TextView
        android:id="@+id/txtElectives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:gravity="center"
        android:text="SwipeDown to go back..."
        android:textSize="18sp"/>


</RelativeLayout>