<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/slideUpCreditsView"
    android:background="#ffff"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/Progress_bar_points">

        <com.todddavies.components.progressbar.ProgressWheel
            android:layout_width="350dp"
            android:layout_height="match_parent"
            ProgressWheel:pwTextColor="@color/colorPrimaryDark"
            ProgressWheel:pwTextSize="40sp"
            ProgressWheel:pwRimColor="#fff"
            ProgressWheel:pwBarLength="60dp"
            ProgressWheel:pwBarColor="#FFD700"
            ProgressWheel:pwBarWidth="50dp"
            ProgressWheel:pwRimWidth="1dp"
            ProgressWheel:pwText="0 sp"

            ProgressWheel:pwContourColor="@color/colorPrimaryDark"
            ProgressWheel:pwContourSize="0.5dp"
            android:id="@+id/count_progressBar"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Progress_bar_points"
        android:gravity="center"
        android:id="@+id/creditstxt">

        <TextView
            android:id="@+id/text_Credit_fase3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Credits"
            android:textAlignment="center"
            android:textSize="19sp" />


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/creditstxt"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants">
    <Button
        android:id="@+id/versturen_credits"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@color/Orange"
        android:text="Send"
        android:textColor="#fff"
        android:clickable="true"/>
</LinearLayout>




    <TextView
        android:id="@+id/swipeDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="SWIPE DOWN TO GO BACK..."
        android:textSize="18sp"
        android:textStyle="italic" />



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"

         />


</RelativeLayout>