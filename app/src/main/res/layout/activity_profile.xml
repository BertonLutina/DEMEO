<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context="app.stucre.Courses"
    android:background="@color/Orange">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.stucre.profile">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="17dp" />

    <android.support.v7.widget.Toolbar
        app:title="Profile"
        android:gravity="center_horizontal"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:id="@+id/toolbarPr"
        ></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarPr"
        android:layout_marginTop="0dp"
        android:background="#f5f5f5"
        android:gravity="center_horizontal"
        android:id="@+id/relativeLayout">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/fotoberre"
            android:padding="5dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/Orange"/>

        <TextView
            android:id="@+id/NaamUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="120dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:text="Berton Lutina Mulamba" />
        <TextView
            android:id="@+id/EmailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="150dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:textColorLink="@color/colorPrimaryDark"
            android:autoLink="email"
            android:text="berton.lutinamulamba@student.odisee.be" />
        <TextView
            android:id="@+id/Rnummer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Orange"
            android:layout_marginTop="175dp"
            android:textSize="11dp"
            android:padding="5dp"
            android:text="R0282865"

            />


        <TextView
            android:id="@+id/Update"
            android:textAlignment="textEnd"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:paddingTop="14dp"
            android:paddingRight="24dp"
            android:background="@drawable/textballoon"
            android:textSize="14dp"
            android:textColor="@color/colorGreen"
            android:layout_marginTop="45dp"
            android:text="Fase 1 : Geslaagd!" />

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:id="@+id/relativeLayout2">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="23dp"
            android:clickable="true"
            android:backgroundTint="@color/colorP"
            app:srcCompat="@android:drawable/ic_dialog_info" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout2"
        android:layout_marginTop="4dp"
        android:layout_below="@id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            app:tabBackground="@color/colorPrimaryDark"
            app:tabGravity="fill"
            app:tabIndicatorColor="#fff"
            app:tabSelectedTextColor="@color/Orange"
            app:tabTextColor="#fff">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Orange"
                android:text="Left" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right" />
        </android.support.design.widget.TabLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        app:menu="@menu/nav_pro_bar"
        app:headerLayout="@layout/header_nav"
        android:id="@+id/nav_prof">

    </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
