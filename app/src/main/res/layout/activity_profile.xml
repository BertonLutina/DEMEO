<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context="app.stucre.Courses"
    android:descendantFocusability="blocksDescendants"
    android:background="#ececec">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.stucre.profile">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="17dp" />

    <android.support.v7.widget.Toolbar
        app:title="Profile"
        android:gravity="center_horizontal"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:id="@+id/toolbarPr"
        ></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbarPr"
        android:background="#ffffff"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/fotoberre"
                app:civ_border_color="@color/Orange"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/NaamUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/profile_image"
                    android:padding="2dp"
                    android:text="Berton Lutina Mulamba"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/EmailUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/NaamUser"
                    android:autoLink="email"
                    android:padding="2dp"
                    android:text="berton.lutinamulamba@student.odisee.be"
                    android:textColor="@color/Orange"
                    android:textColorLink="@color/Orange"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/Rnummer"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:background="@color/Orange"
            android:padding="5dp"
            android:text="R0282865"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12dp" />


    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:layout_below="@id/relativeLayout"
        android:layout_marginBottom="-61dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cardvieLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/linCarFase1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="Fase 1 "
                    android:textAlignment="center" />

                <ProgressBar
                    android:id="@+id/progressf1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linCarFase2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="Fase 2 "
                    android:textAlignment="center" />

                <ProgressBar
                    android:id="@+id/progressf2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linCarFase3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="Fase 3 "
                    android:textAlignment="center" />

                <ProgressBar
                    android:id="@+id/progressf3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linCarfinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="/180"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

                <ProgressBar
                    android:id="@+id/progressfinal"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:progressBackgroundTint="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardvieLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_student"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="105dp"
            android:background="@color/colorGreen"
            android:padding="5dp"
            android:text="In progres..."
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">


    </RelativeLayout>


</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        app:menu="@menu/nav_pro_bar"
        app:headerLayout="@layout/header_nav"
        android:id="@+id/nav_prof">

    </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
