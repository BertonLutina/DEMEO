<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.stucre.forgottenPassword">

    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/loginBlur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/graduatedsmartphone" />

    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/loginOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:background="#e222292b"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/loggo"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="93dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="44dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Username"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textColorHint="#fff"
            android:id="@+id/emailField"
            android:inputType="text"/>

        <Button
            android:id="@+id/sendMail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/Orange"
            android:baselineAligned="false"
            android:text="Send Mail"
            android:textSize="18dp"
            android:textColor="#fff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/odiseewhite2" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/assokul" />
    </LinearLayout>


</RelativeLayout>
