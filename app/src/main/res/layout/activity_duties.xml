<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context="app.stucre.Courses"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.stucre.duties">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDuties"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:textAlignment="center"
            app:title="Duties"
            app:titleTextColor="#ffffff">


        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d26428"
            android:id="@+id/tabsDuties"/>


    </android.support.design.widget.AppBarLayout>



    <SearchView
        android:id="@+id/duties_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout"
        android:imeOptions="normal"
        android:inputType="text"
        android:queryHint="Search"

        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_above="@id/countCreditOptions"
        android:layout_below="@+id/duties_search"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/countCreditOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:autoSizeMaxTextSize="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimaryDark"
        android:gravity="bottom"
        android:padding="15dp"
        android:text="0/60"
        android:textAlignment="center"
        android:textColor="#d26428"
        android:textSize="25dp" />

    <com.todddavies.components.progressbar.ProgressWheel
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pager"
        android:layout_marginEnd="6dp"
        android:max="60"
        android:padding="1dp"
        android:progress="65"
        android:progressDrawable="@drawable/custom_progressbar_circular"
        android:layout_marginTop="6dp"
        ProgressWheel:pwTextSize="14sp"
        ProgressWheel:pwRimColor="@color/BlauwDark"
        ProgressWheel:pwBarLength="60dp"
        ProgressWheel:pwBarColor="@color/Orange"
        ProgressWheel:pwBarWidth="10dp"
        ProgressWheel:pwRimWidth="10dp"
        />

    <RadioGroup
        android:checkedButton="@id/see"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/progressBar2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:background="@drawable/control_switch_background_border"
        android:id="@+id/radioGroup1">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:textAlignment="center"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/control_switch_background_selector"
            android:button="@null"
            android:text="UnSelect"
            android:textSize="15dp"
            android:textColor="@color/Orange"
            android:id="@+id/see"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/control_switch_background_selector"
            android:button="@null"
            android:text="Select"
            android:textSize="15dp"
            android:textColor="@color/Orange"
            android:id="@+id/select"/>

    </RadioGroup>


</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/nav_d_bar"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_nav"
        android:background="@color/Orange"
        android:id="@+id/nav_duties"
        >

    </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
