<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_item_listview"
    android:id="@+id/linearLayout1"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:text="berre"
            android:textAlignment="textStart"
            android:textColor="@drawable/select_item_listviewtext"
            android:textSize="18sp"
            android:textStyle="normal"

             />

        <CheckBox
            android:theme="@style/yourStyle"
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:visibility="visible"/>



    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:text="berre"
        android:textColor="@drawable/select_item_listviewtext2"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="berre"
        android:textAlignment="textEnd"
        android:textColor="@drawable/select_item_listviewtext3"
        android:textSize="14sp"
        android:textStyle="italic" />
</LinearLayout>

</LinearLayout>