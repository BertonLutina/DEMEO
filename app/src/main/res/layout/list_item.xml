<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_item_listview"
    android:id="@+id/linearLayout1"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="15dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="2dp"
        android:id="@+id/listCardview"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bookssstack"
                        android:id="@+id/Beschikbaarvakken"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/check_only"
                        android:id="@+id/checkImage"
                        android:visibility="invisible"/>

                </RelativeLayout>



                <TextView
                    android:id="@+id/text1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="1dp"
                    android:text="berre"
                    android:textAlignment="textStart"
                    android:textColor="@drawable/select_item_listviewtext"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingBottom="10dp"
                    android:paddingLeft="55dp"
                    android:text="berre"
                    android:textColor="@drawable/select_item_listviewtext2"
                    android:textSize="13sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingBottom="1dp"
                    android:paddingLeft="20dp"
                    android:text="berre"
                    android:textColor="@color/Orange"
                    android:textSize="13sp"
                    android:textStyle="italic" />

            </LinearLayout>



        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>