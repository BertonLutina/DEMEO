<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent"
    tools:context="app.stucre.Courses">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.stucre.electivesModules">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

    <android.support.v7.widget.Toolbar
        app:title="Electives Course"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:id="@+id/toolbarEM"
        >

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d26428"
        android:id="@+id/tabselectivesmodules"/>


    </android.support.design.widget.AppBarLayout>


    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout"
        android:imeOptions="normal"
        android:inputType="text"
        android:queryHint="heee"
        android:id="@+id/em_search"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager2"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_above="@id/countCreditOptions"
        android:layout_below="@+id/em_search"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/countCreditOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:autoSizeMaxTextSize="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimaryDark"
        android:padding="13dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#d26428"
        android:textSize="30dp" />


</RelativeLayout>

<android.support.design.widget.NavigationView
android:layout_width="match_parent"
android:layout_height="match_parent"
app:menu="@menu/nav_em_bar"
android:layout_gravity="start"
    app:headerLayout="@layout/header_nav">

</android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
